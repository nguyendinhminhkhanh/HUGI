<script>
    $(document).ready(function () {

        // biểu đồ nhận giá trị từ managerControllers
        var sparklineCharts = function () {
            $("#sparkline1").sparkline([{{CEO.count}}, 2, 10, 20], {
                type: 'pie',
                height: '140',
                sliceColors: ['{{CEO.color}}', '{{CEO.color}}', '#ADEE09', '#FFED03']
            });
        };
        var sparkResize;
        $(window).resize(function (e) {
            clearTimeout(sparkResize);
            sparkResize = setTimeout(sparklineCharts, 500);
        });
        sparklineCharts();

    });
</script>