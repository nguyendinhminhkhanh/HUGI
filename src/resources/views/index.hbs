<div class="row  border-bottom white-bg dashboard-header">
    <div class="col-sm-9">
        <h2>Xin chào: {{existingUser.name}} !</h2>
        <small>You have 42 messages and 6 notifications.</small>

    </div>
    <div class="col-sm-3">
        <form action="/posts/formCreate" method="GET">
            <button type="submit" class="btn btn-primary  block full-width">
                <i class="ri-add-line"></i> Tạo bài viết
            </button>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Bản tin HUGI</h5> <span class="label label-primary">HUGI</span>
                        </div>
                        {{!-- foreach --}}
                        {{#each posts}}


                        <div class="col-lg-12" style="background-color: #ffffff;">
                            <div class="social-feed-box">
                                <div class="pull-right social-action dropdown">
                                    <button data-toggle="dropdown" class="dropdown-toggle btn-white">
                                        <i class="fa fa-angle-down"></i>
                                    </button>
                                    <ul class="dropdown-menu m-t-xs">

                                        <li><a href="#">Lưu bài viết</a></li>
                                    </ul>
                                </div>
                                <div class="social-avatar">
                                    <a href="" class="pull-left">
                                        <img alt="image" src="{{this.user_info.avatar}}">
                                    </a>
                                    <div class="media-body">
                                        <a href="#">
                                            {{this.user_info.username}}
                                        </a>
                                        <small class="text-muted">{{formatDateTime this.createdAt}}</small>
                                    </div>
                                </div>
                                <div class="social-body pb">
                                    <p>
                                        {{this.content}}
                                    </p>

                                    {{#each this.media}}
                                    <img src="{{this.url}}" class="img-responsive" alt="{{this.alt}}">
                                    {{/each}}

                                    <div class="btn-group">
                                        <button class="btn btn-white btn-xs"><i
                                                class="fa fa-thumbs-up"></i>{{this.likes_count}}</button>
                                        <button class="btn btn-white btn-xs"><i
                                                class="fa fa-comments"></i>{{this.comments_count}}</button>
                                        <button class="btn btn-white btn-xs"><i
                                                class="fa fa-share"></i>{{this.shares_count}} </button>
                                    </div>
                                </div>
                                <div class="social-footer">
                                    {{#each this.comments}}
                                    <div class="social-comment">
                                        <a href="" class="pull-left">
                                            <img alt="image" src="{{this.user_info.avatar}}">
                                        </a>
                                        <div class="media-body">
                                            <a href="#">
                                                {{this.user_info.username}}
                                            </a>
                                                {{this.content}}
                                            <br />
                                            <a href="#" class="small"><i class="fa fa-thumbs-up"></i>{{this.likes_count}}</a>
                                            -
                                            <small class="text-muted">{{formatDateTime this.createdAt}}</small>
                                        </div>
                                    </div>
                                    {{/each}}
                                    <div class="social-comment">
                                        <form method="POST" action="/posts/{{this._id}}/comments" class="media-body" enctype="multipart/form-data">
                                            <label style="display: flex;">
                                                <textarea class="form-control" name="content"  placeholder="Viết comment..."></textarea>
                                                <button type="submit" class="btn btn-sm btn-primary">Bình luận</button>
                                            </label>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        <div class="footer">
            <div class="pull-right">
                10GB of <strong>250GB</strong> Free.
            </div>
            <div>
                <strong>Copyright</strong> Example Company &copy; 2014-2015
            </div>
        </div>
    </div>
</div>
<!-- Toastr -->
<script src="/js/jquery-2.1.1.js"></script>
<script src="/js/plugins/toastr/toastr.min.js"></script>
<script>
    $(document).ready(function () {
        setTimeout(function () {
            toastr.options = {
                closeButton: true,
                progressBar: true,
                showMethod: 'slideDown',
                timeOut: 4000
            };
            toastr.success('Responsive Admin Theme', 'Chào mừng đến với HUGI');
        }, 1300);
    });
</script>